    border-collapse: separate;
    border-spacing: 1px;
    
  }
  .attempt {
    /* background-color: rgb(238, 238, 238); */
   
    height: 25px;
    color: rgb(128, 0, 85);
    /* border: 15px solid green; */
    padding: 10px;
    justify-content: center;
    text-align: center;
    margin: auto;
    
  }

  input[value="Disputed"] {
    background: rgb(141, 122, 109);
  }

  input[type=text],
  select {
    padding: 1px 1px;
    margin: 8px 0;
