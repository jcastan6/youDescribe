<link
  href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
  rel="stylesheet"
  id="bootstrap-css"
/>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<style>
  .body {
    font-family: 'Noto Sans JP', sans-serif;
    background-color: #717ea1;
    color: #000000;
  }
  .heading-text {
    color: #61259e;
    font-weight: 800;
    font-size: 36px;
    padding: 3%;
  }
  .login-text {
    color: #61259e;
  }
  .fields-text {
    color: #306866;
  }
  .img-div {
    box-shadow: 4px 4px 10px 4px #606883;
    border-radius: 15px;
    background-color: rgb(163, 196, 196);
  }

  @media screen and (max-width: 900px) {
    .wrapper {
      background-color: #dfddd4;
      margin: 4%;
      box-shadow: 2px 5px 10px 2px rgb(0 0 0 / 20%);
      border-radius: 10px;
    }
    /* .image {
      width: 100%;
    } */
    .heading-text {
      font-size: 30px;
    }
  }
  @media screen and (min-width: 900px) {
    .wrapper {
      background-color: #dfddd4;
      margin-left: 20%;
      margin-right: 20%;
      margin-top: 2%;
      margin-bottom: 2%;
      box-shadow: 2px 5px 10px 2px rgb(0 0 0 / 20%);
      border-radius: 15px;
    }
    /* .image { */
    /* margin-top: -90px;
      margin-bottom: -90px; */
    /* width: 100%;
      display: block;
      margin-left: auto;
      margin-right: auto;
    } */
  }
</style>
<script>
  function checkForm(form) {
    if (
      form.password.value != '' &&
      form.password.value == form.passwordMatch.value
    ) {
      //alert("Good Job");
      return true;
    } else {
      alert(
        "Error: Please check that you've entered and confirmed your password!"
      );
      form.password.focus();
      return false;
    }
  }
</script>
<body class="body">
  <div id="register" class="wrapper">
    <h1 class="text-center heading-text">Caption Rater - The Game!</h1>
    <div class="container">
      <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
          <div id="login-box" class="col-md-12">
            <form
              id="login-form"
              class="form"
              action="/register"
              method="post"
              onsubmit="return checkForm(this);"
            >
              <h3 class="text-center login-text">Register</h3>
              <div class="form-group">
                <label for="username" class="fields-text">Username:</label
                ><br />
                <input
                  pattern=".{6,18}"
                  title="Username should be between 6 and 18 characters (not your email!)"
                  type="text"
                  name="username"
                  id="username"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="email" class="fields-text">Email:</label><br />
                <input
                  type="email"
                  name="email"
                  id="email"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="password" class="fields-text">Password:</label
                ><br />
                <input
                  pattern=".{6,18}"
                  title="Should be between 6 and 18 characters! "
                  type="password"
                  name="password"
                  id="password"
                  class="form-control"
                />
              </div>
              <div class="form-group">
                <label for="passwordMatch" class="fields-text"
                  >Confirm Password:</label
                ><br />
                <input
                  type="password"
                  name="passwordMatch"
                  id="passwordMatch"
                  class="form-control"
                />
              </div>
              <div id="register-link" class="text-left mb-3">
                <a href="/" class="">Already have an account?</a>
              </div>
              <div class="form-group text-center">
                <input
                  type="submit"
                  name="submit"
                  class="btn btn-info btn-md"
                  value="Register"
                />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
