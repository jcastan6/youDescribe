  .button_instructions {
    background-color: rgb(72, 83, 247);
    border: none;
    color: white;
    padding: 10px 10px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 14px;
    margin: 30px;
    border-radius: 8px;
    cursor: pointer;
