<meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no"/>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300&display=swap" rel="stylesheet">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<style>
  @media screen and (max-width: 900px) {
    .wrapper {
      background-color: #e0e1dd;
      margin: 5%;
      border-radius: 10px;
    }  
    .table{
      width: 90%;
    }
   }
  @media screen and (min-width: 900px) {
    .wrapper {
      background-color: #dfddd4;
      margin-left: 20%;
      margin-right: 20%;
      margin-top:3%;
      margin-bottom:3%;
      border-radius: 15px;
    }
    .table{
      width: 50%;
    }
  }

  .body {  
    font-family: "Noto Sans JP", sans-serif;
    background-color: #717ea1;
    /* color: #778da9; */
  }

  .heading-text{
    color:#61259e;
    font-weight: 900;
    font-size: 36px;
  }

  .table {
    border-radius: 1px;
    border-width: 3px;
    background-color: #363f50;
    margin: auto;
    overflow:auto;
    border-collapse: unset;
  }

  .table td, .table th {
    /* padding: .75rem; */
    /* vertical-align: top; */
    border-top: 1px solid #dee2e6;
    border-left: 1px solid #dee2e6;
  }

  .button-dashboard {
    background-color: rgb(224, 156, 108);
    color: white;
    border-radius: 8px;
    box-shadow: 0 3px 3px 0 rgba(0, 0, 0, 0.2), 0 3px 3px 0 rgba(0, 0, 0, 0.19);
    border-radius: 8px;
  }
  .button-dashboard:hover {
    background-color: rgb(223, 131, 70);
    color: ivory;
  }

  .button-play {
    background-color: rgb(87, 187, 170);
    color: white;
    border-radius: 8px;
    box-shadow: 0 3px 3px 0 rgba(0, 0, 0, 0.2), 0 3px 3px 0 rgba(0, 0, 0, 0.19);
    border-radius: 8px;
  }
  .button-play:hover {
    background-color: rgb(40, 151, 133);
    color: ivory;
  }

  .gif{
      margin-top: -15px;
      margin-bottom: -60px;
      width: 60%;
      display: block;
      margin-left: auto;
      margin-right: auto;
    }

  @media screen and (min-width: 600px) {
    .gif{
      width: 40%;
    }
  }
  @media screen and (min-width: 1280px) {
  .gif{
      width: 30%;
    }
  }
</style>

<body class="body"> 
  <div class="wrapper">
    <br>
    <h1 class="text-center heading-text">Caption Rater - The Game!</h1>
    <div class="d-flex justify-content-center">
      <form  method="GET" action="/dashboard" class="form-group">
        <input class="btn m-3 button-dashboard" type="submit" name="submit" value="Back to Dashboard">
      </form>
    <form  method="GET" action="/play" class="form-group">
      <input class="btn m-3 button-play" type="submit" name="submit" value="Play">
    </form>   
  </div>
    <h3 class="text-center text-info font-italic font-weight-bold"><u>Leaderboard</u></h3>
    <div class="text-center img-div mx-auto d-block">
    <img src= "https://caption.click/gifs/dashboard.gif" class="img-fluid gif">
  </div>
      <table class="table table-dark">
        <thead class="thead-light">
          <tr>
            <th scope="col">User</th>
            <th style="text-align: center" scope="col">Score</th>
          </tr>
        </thead>
        <br>
        
        <h4 class="text-center font-weight-bold text-success">Daily Champions!</h4>
        <br>
        <tbody>
          <% for(var i=0; i < sort_ByDailyScore.length; i++) { %>

          <tr>
            <th scope="row"><%= sort_ByDailyScore[i].username %></th>
            <td style="text-align: center"><%= Number(sort_ByDailyScore[i].result).toFixed(0) %></td>
            </td>
          </tr>

          <% } %>
        </tbody>
        
      </table>
   
    <br>
    <h4 class="text-center font-weight-bold text-success">5 top all-time highest score players!</h4>
    <br>
    <div>
      <table class="table table-dark">
        <thead class="thead-light">
          <tr>
            <th scope="col">User</th>
            <th style="text-align: center" scope="col">Score</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < sort_TotalScore.length; i++) { %>

          <tr>
            <th scope="row"><%= sort_TotalScore[i].username %></th>
            <td style="text-align: center" ><%= sort_TotalScore[i].total_score %></td>
            </td>
          </tr>

          <% } %>
        </tbody>
      </table>
    </div>
 
   
    <br>
    <br>
  </div>  
</body>