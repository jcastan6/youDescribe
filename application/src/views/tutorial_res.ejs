  .caption1 {
    color: rgb(3, 14, 3);
    padding: 2px;
    font-size: 16px;
    text-align: center;
    margin-top: 0px !important;
  }

  .feedback-text {
    overflow: hidden;
    transform: translatey(0px);
    animation: float 0.3s ease-in-out 2;
  }
  @keyframes float {
    0% {
      transform: translatey(0px);
    }
    50% {
      transform: translatey(-10px);
    }
    100% {
      transform: translatey(0px);
    }
  }
  .loader {
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgb(167, 165, 165);
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .disappear {
    animation: vanish 1s forwards;
  }

  @keyframes vanish {
    100% {
      opacity: 0;
      visibility: hidden;
    }
  }

  .vanish-div {
    box-shadow: 4px 4px 10px 4px #606883;
    border-radius: 15px;
    background-color: rgb(94, 94, 94);
    width: 75%;
  }
  .vanish-text {
    font-size: 50px;
  }
  .vanish-gif {
    width: 50%;
    margin-bottom: -100px;
  }
  @media screen and (max-width: 648px) {
    .vanish-text {
      font-size: 40px;
    }
  }
  @media screen and (max-width: 800px) {
    .vanish-gif {
      width: 100%;
    }
    .vanish-div {
      width: 100%;
      padding: 10%;
      margin: 10%;
    }
  }
</style>
<script>
