    margin-right: 0 !important;
  }
  .button_dashboard {
    background-color: rgb(224, 138, 80);
    color: white;
  }
  .margin-dashboard-btn {
    margin-bottom: -10px;
    margin-top: 15px;
  }
  .btn-lg {
    padding: 8px 10px;
  }
  .button_instructions {
    background-color: rgb(72, 83, 247);
    border: none;
    color: white;
    padding: 13px 20px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 15px;
    margin: 30px;
