  .caption {
    color: rgb(3, 14, 3);
    display: block;
    font-size: 16px;
    margin-left: auto;
    margin-right: auto;
    max-width: 90%;
    background-color: white;
    padding: 2%;
    border-radius: 4px;
    text-align: center;
    box-shadow: 2px 5px 10px 2px rgb(0 0 0 / 20%);
  }
  .caption2 {
    color: rgb(3, 14, 3);
    display: block;
    font-size: 16px;
    margin-left: auto;
    margin-right: auto;
    max-width: 90%;
    background-color: white;
    padding: 2%;
    border-radius: 4px;
    text-align: center;
    box-shadow: 2px 5px 10px 2px rgb(0 0 0 / 20%);
